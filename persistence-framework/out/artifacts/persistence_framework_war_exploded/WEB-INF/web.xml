<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Apache-Axis</display-name>

    <resource-ref>
        <res-ref-name>jdbc/postgresql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <display-name>mini-framework</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/application-context.properties</param-value>
    </context-param>

    <context-param>
        <param-name>driver</param-name>
        <param-value>org.postgresql.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:postgresql://arjuna.db.elephantsql.com:5432/</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>felkmqwt</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>PFz09wbu8QuuZvQk5yuNdC2qwj82XXAS</param-value>
    </context-param>

    <!--    <servlet>-->
    <!--        <servlet-name>AppInitServlet</servlet-name>-->
    <!--        <servlet-class>spms.servlets.AppInitServlet</servlet-class>-->
